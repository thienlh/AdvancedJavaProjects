<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <context-param>
        <param-name>initial</param-name>
        <param-value>5</param-value>
    </context-param>
    <context-param>
        <param-name>initial</param-name>
        <param-value>500</param-value>
    </context-param>
    <servlet>
        <servlet-name>InitCounter</servlet-name>
        <servlet-class>sample.servlet.InitCounter</servlet-class>
        <init-param>
            <param-name>initial</param-name>
            <param-value>100</param-value>
        </init-param>
        <init-param>
            <param-name>initial</param-name>
            <param-value>10</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>CenterServlet</servlet-name>
        <servlet-class>sample.servlet.CenterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EndServlet</servlet-name>
        <servlet-class>sample.servlet.EndServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InitCounter</servlet-name>
        <url-pattern>/InitCounter</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CenterServlet</servlet-name>
        <url-pattern>/CenterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EndServlet</servlet-name>
        <url-pattern>/EndServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>requestDispatcher.html</welcome-file>
    </welcome-file-list>
</web-app>
