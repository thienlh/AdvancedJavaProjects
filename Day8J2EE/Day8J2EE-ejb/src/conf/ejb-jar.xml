<?xml version="1.0" encoding="UTF-8"?>
<ejb-jar version="2.1" xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/ejb-jar_2_1.xsd">
    <display-name>Day8J2EE-ejb</display-name>
    <enterprise-beans>
        <session>
            <display-name>CalculatorSessionBeanSB</display-name>
            <ejb-name>CalculatorSessionBean</ejb-name>
            <home>sample.session.CalculatorSessionBeanRemoteHome</home>
            <remote>sample.session.CalculatorSessionBeanRemote</remote>
            <local-home>sample.session.CalculatorSessionBeanLocalHome</local-home>
            <local>sample.session.CalculatorSessionBeanLocal</local>
            <ejb-class>sample.session.CalculatorSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        <session>
            <display-name>AccountSessionBeanSB</display-name>
            <ejb-name>AccountSessionBean</ejb-name>
            <home>sample.session.AccountSessionBeanRemoteHome</home>
            <remote>sample.session.AccountSessionBeanRemote</remote>
            <local-home>sample.session.AccountSessionBeanLocalHome</local-home>
            <local>sample.session.AccountSessionBeanLocal</local>
            <ejb-class>sample.session.AccountSessionBean</ejb-class>
            <session-type>Stateless</session-type>
            <transaction-type>Container</transaction-type>
        </session>
        </enterprise-beans>
    <assembly-descriptor>
        <container-transaction>
            <method>
                <ejb-name>CalculatorSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        <container-transaction>
            <method>
                <ejb-name>AccountSessionBean</ejb-name>
                <method-name>*</method-name>
            </method>
            <trans-attribute>Required</trans-attribute>
        </container-transaction>
        </assembly-descriptor>
</ejb-jar>
